<!DOCTYPE html>
<html lang="en">
<head>
    <title>Feedback Form</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans&display-swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        /* Set background color for the body */
        body {
            background-color: #5ae7e3; /* Light gray background color */
        }

        /* Set max width and center the form */
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #cceeee; /* White background color */
            border-radius: 20px; /* Rounded corners */
        }

        /* Add some space between form elements */
        .form-group {
            margin-bottom: 20px;
        }

        /* Center align the view */
        .view {
            text-align: center;
            margin-bottom: 20px;
        }

        /* Hide the radio buttons */
        .star-rating input[type="radio"] {
            display: none;
        }

        /* Style the star icons */
        .star-rating label {
            font-size: 30px;
            color: #1c1d1c;
            cursor: pointer;
        }

        /* Highlight the selected star and stars on hover */
        .star-rating input[type="radio"]:checked ~ label,
        .star-rating label:hover {
            color: #ffc107; /* Yellow color */
        }

        /* Style the labels */
        .star-rating .rating-label {
            font-size: 18px;
            color: #1c1d1c;
        }
    </style>
</head>
<body>
    <div class="view">
        <!-- <img src="1.svg"> -->
    </div>

    <div class="container">
        <h1 class="text-center mt-5 font-weight-bold">Feedback</h1>
        <hr class="bg-white">
        <h5 class="text-center">Please write your feedback below:</h5>
        <h3 class="mt-4">How do you rate your overall experience?</h3>

        <form id="feedbackForm">
            <div class="form-group star-rating">
                <label class="rating-label" for="star5">Excellent</label>
                <input type="radio" id="star5" name="experience" value="excellent">
                <label for="star5">&#9733;</label>
                
                <input type="radio" id="star4" name="experience">
                <label for="star4">&#9733;</label>
                
                <input type="radio" id="star3" name="experience">
                <label for="star3">&#9733;</label>

                <input type="radio" id="star2" name="experience">
                <label for="star2">&#9733;</label>

                <label class="rating-label" for="star1">Bad</label>
                <input type="radio" id="star1" name="experience" value="bad">
                <label for="star1">&#9733;</label>
            </div>
            
            <div class="form-group">
                <label for="fullname">Full Name*</label>
                <input type="text" id="fullname" required="" placeholder="Rishi Thakur" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="email">Email*</label>
                <input type="email" id="email" required="" placeholder="rishi@gmail.com" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="age">Age*</label>
                <input type="number" id="age" required="" placeholder="23" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="phone">Phone*</label>
                <input type="tel" id="phone" required="" placeholder="+91-2244596278" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="message">Message*</label>
                <textarea id="message" required="" placeholder="Write your message here!" cols="48" rows="5" class="form-control"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>

    <script>
        // Function to handle form submission
        function handleSubmit(event) {
            event.preventDefault(); // Prevent default form submission

            // Get form inputs
            const experience = document.querySelector('input[name="experience"]:checked').value;
            const fullName = document.getElementById('fullname').value;
            const email = document.getElementById('email').value;
            const age = document.getElementById('age').value;
            const phone = document.getElementById('phone').value;
            const message = document.getElementById('message').value;

            // Do something with the form data (e.g., send it to a server)
            console.log('Experience:', experience);
            console.log('Full Name:', fullName);
            console.log('Email:', email);
            console.log('Age:', age);
            console.log('Phone:', phone);
            console.log('Message:', message);

            // Clear form inputs
            document.getElementById('fullname').value = '';
            document.getElementById('email').value = '';
            document.getElementById('age').value = '';
            document.getElementById('phone').value = '';
            document.getElementById('message').value = '';

            // Optionally, display a success message or redirect the user
        }

        // Event listener for form submission
        document.getElementById('feedbackForm').addEventListener('submit', handleSubmit);
    </script>
</body>
</html>