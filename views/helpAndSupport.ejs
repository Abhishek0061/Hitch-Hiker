    <script>// help&support.js
        document.addEventListener("DOMContentLoaded", function() {
            var outerCard = document.getElementById("outerCard");
            var innerCards = document.getElementById("innerCards");
            var innerHeading = document.querySelector("#innerCards h2");
        
            outerCard.addEventListener("click", function() {
                outerCard.style.display = "none"; // Hide the outer card
                innerCards.style.display = "block"; // Show the inner cards
            });
        
            innerHeading.addEventListener("click", function() {
                innerCards.style.display = "none"; // Hide the inner cards
                outerCard.style.display = "block"; // Show the outer card
            });
        });
        </script>
          <script>
            document.addEventListener("DOMContentLoaded", function() {
            const searchInput = document.getElementById("searchInput");
            const sections = document.querySelectorAll("section");
          
            searchInput.addEventListener("input", function() {
              const searchTerm = searchInput.value.toLowerCase();
          
              sections.forEach(section => {
                const sectionId = section.getAttribute("id");
                const sectionTitle = section.querySelector("h2").innerText.toLowerCase();
          
                if (sectionTitle.includes(searchTerm)) {
                  section.style.display = "block";
                } else {
                  section.style.display = "none";
                  }
                });
             });
            });
